@model List<RoomReservation.DB.Models.RRReservation>

<h2>Lista rezerwacji</h2>
<script>
    $(document).ready(function () {
        $('.btn-usun').click(function () {
            var btn = $(this);
            swal({
                title: 'Na pewno chcesz to usunąć?',
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Tak,chcę to usunąć!',
                cancelButtonText: 'Anuluj'
            }).then(function () {
                $(btn).closest('form').submit();
            })
        });
    });
</script>
@Html.ActionLink("Dodaj rezerwację", "ReservationDetails", null, new { @class = "btn btn-default" })

<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped" style="margin-top:20px;">
            <tr>
                <th>
                    Nazwa pomieszczenia
                </th>
                <th>Data rezerwacji</th>
                <th>
                    Użytkownik
                </th>
                <th>
                    Status
                </th>
                <th></th>
                <th></th>
                @if (User.IsInRole("Admin"))
                {
                    <th></th>
                }
            </tr>
            @foreach (RoomReservation.DB.Models.RRReservation rezerwacja in Model)
            {
                <tr>
                    <td>
                        @rezerwacja.Room.Name
                    </td>
                    <td>
                        @rezerwacja.Date.ToShortDateString()
                    </td>
                    <td>
                        @rezerwacja.User.Email
                    </td>
                    <td id="status">
                        @rezerwacja.Status
                    </td>
                    <td>
                        @if (rezerwacja.Status != RoomReservation.Enum.ReservationStatus.Rejected)
                        {
                            <a href="@Url.Action("ReservationDetails", "Reservation", new { id = rezerwacja.Id })" cl class="btn btn-default btn-sm pull-right" title="Edytuj"><span class="glyphicon glyphicon-cog"></span></a>
                        }
                    </td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            @if (rezerwacja.Status == RoomReservation.Enum.ReservationStatus.InProgress)
                            {

                                using (Html.BeginForm("ChangeStatus", "Reservation", FormMethod.Post))
                                {
                                    @Html.Hidden("id", rezerwacja.Id)  @*nazwa ma byc tak jak nazwa parametru w kontrolerze , a wartosc pobieramy z konkretnego elementu modelu*@
                                    @Html.Hidden("status", RoomReservation.Enum.ReservationStatus.Rejected)  @*nazwa ma byc tak jak nazwa parametru w kontrolerze , a wartosc pobieramy z konkretnego elementu modelu*@
                                    <button type="submit" title="Odrzuć" class="btn btn-default btn-sm btn-odrzuc pull-right">
                                        <span class="glyphicon glyphicon-remove "></span>
                                    </button>
                                }
                                using (Html.BeginForm("ChangeStatus", "Reservation", FormMethod.Post))
                                {
                                    @Html.Hidden("id", rezerwacja.Id)  @*nazwa ma byc tak jak nazwa parametru w kontrolerze , a wartosc pobieramy z konkretnego elementu modelu*@
                                    @Html.Hidden("status", RoomReservation.Enum.ReservationStatus.Accepted)  @*nazwa ma byc tak jak nazwa parametru w kontrolerze , a wartosc pobieramy z konkretnego elementu modelu*@
                                    <button type="submit" title="Akceptuj" class="btn btn-default btn-sm btn-akceptuj pull-right">
                                        <span class="glyphicon glyphicon-ok "></span>
                                    </button>
                                }
                            }
                        </td>
                    }
                    <td>
                        @using (Html.BeginForm("DeleteReservation", "Reservation", FormMethod.Post))
                        {

                            @Html.Hidden("id", rezerwacja.Id)  @*nazwa ma byc tak jak nazwa parametru w kontrolerze , a wartosc pobieramy z konkretnego elementu modelu*@
                            <button type="button" title="Usuń" class="btn btn-default btn-sm btn-usun pull-right">
                                <span class="glyphicon glyphicon-trash "></span>
                            </button>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>